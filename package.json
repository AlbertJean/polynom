{
  "name": "polynom",
  "version": "1.0.0-alpha",
  "description": "Build SVG paths easily using an intuitive interface.",
  "author": "Anthony Dugois <dev.anthonydugois@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "npm run build",
    "prod": "npm run build -- --production",
    "build": "babel-node scripts/build",
    "lint": "eslint .",
    "test": "npm run lint"
  },
  "devDependencies": {
    "babel-core": "^6.6.5",
    "babel-eslint": "^5.0.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-1": "^6.5.0",
    "chalk": "^1.1.1",
    "css-loader": "^0.23.1",
    "eslint": "^2.2.0",
    "eslint-config-general": "^1.0.1",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-react": "^4.2.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "imports-loader": "^0.6.5",
    "opn": "^4.0.1",
    "path": "^0.12.7",
    "postcss-cssnext": "^2.4.0",
    "postcss-import": "^8.0.2",
    "postcss-loader": "^0.8.1",
    "postcss-url": "^5.1.1",
    "style-loader": "^0.13.0",
    "stylelint": "^4.5.1",
    "stylelint-config-standard": "^4.0.0",
    "stylelint-loader": "^4.5.0",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "classnames": "^2.2.3",
    "react": "^0.14.7",
    "react-dnd": "^2.1.2",
    "react-dnd-html5-backend": "^2.1.2",
    "react-dom": "^0.14.7",
    "react-keybindings": "^1.0.8",
    "react-redux": "^4.4.0",
    "react-router": "^2.0.0",
    "redux": "^3.3.1",
    "redux-logger": "^2.6.1",
    "redux-thunk": "^2.0.1",
    "reselect": "^2.1.0",
    "snapsvg": "^0.4.0"
  },
  "repository": "https://github.com/anthonydugois/svg-path-builder",
  "babel": {
    "presets": [
      "es2015",
      "stage-1",
      "react"
    ],
    "env": {
      "development": {
        "presets": [
          "react-hmre"
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": "eslint-config-general/react",
    "parser": "babel-eslint"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "function-url-quotes": "none",
      "number-leading-zero": "never",
      "rule-non-nested-empty-line-before": null,
      "indentation": null
    }
  }
}
